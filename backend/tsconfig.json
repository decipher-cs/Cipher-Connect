{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "esnext",                                
    "moduleResolution": "nodenext",                      
    "rootDir": "./src",                                 
    "outDir": "./dist",                             
    "noEmitOnError": true,                         
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                             
    "skipLibCheck": true                       
  }
}
