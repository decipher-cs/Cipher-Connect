{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "nodenext",
        "rootDirs": [
            "./src",
            "../@types"
        ],
        "outDir": "./dist",
        "baseUrl": ".",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./environment.d.ts"
        ]
    },
    "include": [
        "src",
        "./environment.d.ts",
        "./../@types"
    ],
    "exclude": [
        "node_modules",
        "assets",
        "dist"
    ]
}
