generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  username      String         @id @db.VarChar(16)
  passwordHash  String         @map("password_hash") @db.VarChar(60)
  createTime    DateTime       @default(now()) @map("create_time") @db.Timestamp(0)
  refreshTokens refreshToken[]

  @@map("users")
}

model refreshToken {
  tokenOwner   user   @relation(fields: [userUsername], references: [username])
  tokenValue   String @id @map("token_value")
  userUsername String @db.VarChar(16) @map("user_username")

  @@map("refresh_tokens")
}
